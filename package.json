{
  "name": "tasks",
  "version": "0.1.1",
  "private": true,
  "description": "A trello-like task manager",
  "dependencies": {
    "@types/jest": "24.0.12",
    "@types/node": "12.0.0",
    "@types/prismjs": "^1.16.0",
    "@types/react": "16.8.17",
    "@types/react-beautiful-dnd": "^11.0.2",
    "@types/react-dom": "16.8.4",
    "@types/react-redux": "^7.0.8",
    "@types/shortid": "^0.0.29",
    "@types/styled-components": "^4.1.14",
    "custom-electron-titlebar": "^3.0.8",
    "electron-devtools-installer": "^2.2.4",
    "electron-is-dev": "^1.1.0",
    "electron-store": "^3.2.0",
    "immer": "^3.1.1",
    "moize": "^5.4.4",
    "polished": "^3.3.0",
    "prismjs": "^1.16.0",
    "react": "^16.8.6",
    "react-beautiful-dnd": "^11.0.3",
    "react-dom": "^16.8.6",
    "react-markdown": "^4.0.8",
    "react-redux": "7.0.3",
    "react-scripts": "3.0.0",
    "react-simple-code-editor": "^0.9.10",
    "react-split-pane": "^0.1.87",
    "reakit": "^1.0.0-beta.0",
    "redux": "4.0.1",
    "redux-persist": "6.0.0-pre1",
    "redux-persist-electron-storage": "^2.1.0",
    "redux-ts-utils": "^3.2.2",
    "shortid": "^2.2.14",
    "styled-components": "^4.2.0",
    "typescript": "3.4.5"
  },
  "scripts": {
    "start": "BROWSER=none rescripts start",
    "build": "rescripts build",
    "test": "rescripts test",
    "eject": "rescripts eject",
    "electron-start": "electron .",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "predist": "yarn build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@rescripts/cli": "^0.0.10",
    "@rescripts/rescript-env": "^0.0.10",
    "concurrently": "^4.1.0",
    "electron": "^5.0.1",
    "electron-builder": "^20.39.0",
    "prettier": "^1.17.0",
    "wait-on": "^3.2.0"
  },
  "build": {
    "appId": "uk.lexanth.tasks",
    "linux": {
      "target": "AppImage"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}